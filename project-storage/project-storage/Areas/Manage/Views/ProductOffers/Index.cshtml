@model Project_storage.Areas.Manage.Models.ProductOffers.IndexVM

@{
    ViewData["Title"] = "Producten";
}

<h2>Producten</h2>

<form asp-action="saveproductoffers" method="post">
    <div class="row">
        @for (int i = 0; i < Model.ProductOffers.Count(); i++)
        {
            <div class="row">
                @Html.EditorFor(x => x.ProductOffers[i])
            </div>
            <hr />
        }
    </div>
    <button type="submit" class="btn btn-success pull-right">Save</button>
</form>

